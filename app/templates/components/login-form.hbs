<div class="ui middle aligned center aligned grid login">
  <div class="column">
    <h2 class="ui image header">
      <img src="http://placehold.it/100x100" class="image">
      <div class="content">
        Login to your account
      </div>
    </h2>
    <form class="ui large form"  {{action 'authenticate' on='submit'}}>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="mail icon"></i>
            {{input id='email' placeholder='Enter Email' value=email}}
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            {{input id='password' placeholder='Enter Password' type='password' value=password}}

          </div>
        </div>
        <input type="submit" class="ui fluid large yellow submit button" value="Login">
      </div>
      {{#if errorMessage}}
        <div class="ui error message visible">{{errorMessage}}</div>
      {{/if}}

    </form>

    <div class="ui message">
      New to Robodash? {{#link-to 'signup'}}Sign Up{{/link-to}}
    </div>
  </div>
</div>
