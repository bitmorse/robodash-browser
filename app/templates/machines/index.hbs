<div class="ui container">
    <h1 class="topheader ui center aligned header">Robodash</h1>
    <div class="ui four cards">
      {{#each model as |machine|}}
        <div class="ui card">


            {{#link-to 'machines.show' machine class="image dimmable"}}

            <div class="ui blurring inverted dimmer transition hidden">
              <div class="content">
                <div class="center">
                   <div class="ui yellow huge button">
                     View
                   </div>
                </div>
              </div>
            </div>
            <img src="octanis1.png">

            {{/link-to}}

           <div class="content">
            <div class="header">{{machine.name}}
              {{#link-to 'machines.edit' machine class='ui circular icon button right floated'}}
                <i class="icon pencil"></i>
              {{/link-to}}
            </div>
            <div class="meta">
              <a class="group">{{machine.category}}</a>
            </div>
            <div class="description">{{machine.description}}</div>
          </div>
          <div class="extra content">
             <div class="ui icon right floated" style="padding-top:3px;">
               <i class="icon star"></i> 2
             </div>
          </div>
        </div>
      {{/each}}
  </div>
</div>

<div class="ui container segment">
  <div class="ui center input">
    {{#link-to 'machines.new' class='ui black button'}}
      <i class="add icon"></i>
      Add Yours
    {{/link-to}}
  </div>
</div>
<script type="text/javascript">

$(document)
  .ready(function() {
    $('.special.card .image').dimmer({
      on: 'hover'
    });
    $('.star.rating')
      .rating()
    ;
    $('.card .dimmer')
      .dimmer({
        on: 'hover'
      })
    ;
  })
;

</script>
